<html>
<head>
<title>Hangman</title>
<link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
  <div class="title">Hangman</div>
  
  <div class="instructions">Welcome to Hangman. Try to guess the letters of the secret word. If you make 6 incorrect guesses you lose!</p><br><br></div>
  <div class="game_box">
    <div class="draw_box">
      <img src="scaffold.png" class="scaffold">
      <% if @incorrect_guesses > 0 %>
        <img src="head.png" class="head">
      <% end %>
      <% if @incorrect_guesses > 1 %>
        <img src="left_arm_body.png" class="body">
      <% end %>
      <% if @incorrect_guesses > 2 %>
        <img src="right_arm.png" class="right_arm">
      <% end %>
      <% if @incorrect_guesses > 3 %>
        <img src="left_leg.png" class="left_leg">
      <% end %>
      <% if @incorrect_guesses > 4 %>
        <img src="right_leg.png" class="right_leg">
      <% end %>
      <% if @incorrect_guesses > 5 %>
        <img src="face.png" class="face">
      <% end %>
    </div>
    <div class="info_box" >
      <div class="info">
        <p><span class="label">Secret Word:  </span><%= @partial_word.split(//).join(" ")%></p>
        <div></div>
        <p><span class="label">Guesses: </span><%= @guessed.sort.join(" ")%></p>
        <div></div>
          <p><span class="label">Incorrect Guesses: </span><%= @incorrect_guesses%></p>
        <div></div>
        <% if !(@lose || @win) %>
          
          <form action='/' method="post"><label>Enter a Guess: </label><input type="text" name="guess" size="1" autofocus="autofocus"/><input type="submit" value="Enter"></form>
        <% end %>
      </div>
    </div>
    
  </div>

</body>

</html>